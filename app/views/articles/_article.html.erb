<table>
  <thead>
    <tr>
      <th>By who?</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan = "3">Action</th>
    </tr>
  </thead>
  <tbody>
    <% obj.each do |article| %>
      <tr>
        <td><%= article.user.username if article.user%></td>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= link_to "Delete", article_path(article), data: { turbo_method: :delete } %></td><%# dupa article pune de la sine .id%>
        <td><%= link_to "Show", article_path(article) %></td>
        <td><%= link_to "Edit", edit_article_path(article) %></td>
      </tr>
     <% end %> 
  </tbody>
</table>